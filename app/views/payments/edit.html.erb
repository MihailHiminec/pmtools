<main id="content" role="main">
  <div class="u-bg-light-blue-50">
    <%= simple_form_for @payment, url: project_payment_path do |f| %>
      <div class="container-fluid pt-1 u-space-1-bottom u-space-bottom-0--lg">
        <div class="bg-white pl-4 pr-4 pt-3 pb-3">
          <div class="row align-items-center">
            <div class="col-2">
              <%= link_to 'Назад', project_path(@payment.project_id), class: "nav-link u-header__nav-link" %>
            </div>

            <div class="col-10">
              <!-- Button -->
              <%= f.button :submit,'Сохранить',  class: 'btn-success btn-xs  float-right' %>
              <!-- End Button -->
            </div>
          </div>
        </div>
      </div>
      <div class="container-fluid u-space-1-bottom mt-1">
          <div class="row">
            <div class="col-md-3 pr-1">
              <div class="bg-white">
                <div class="card-body">
                    <%= f.input :cost, label: 'Сумма, руб.' do %>
                      <div class="input-group input-group-sm u-form u-form--sm u-form--modern">
                        <%= f.input_field :cost, class: 'form-control u-form__input u-no__focus u-no__border-color u-no__image u-disable' %>
                      </div>
                    <% end %>
                  <%= f.input :plan_date_payment, label: 'Планируемая дата' do %>
                    <div class="input-group input-group-sm u-form u-form--sm u-form--modern">
                      <%= f.input_field :plan_date_payment, as: :date, class: 'form-control u-form__input u-no__focus u-no__border-color u-no__image', label: false, html5: true %>
                    </div>
                  <% end %>
                  <%= f.input :rel_date_payment, label: 'Дата факт. признания' do %>
                    <div class="input-group input-group-sm u-form u-form--sm u-form--modern">
                      <%= f.input_field :rel_date_payment, as: :date, class: 'form-control u-form__input u-no__focus u-no__border-color u-no__image', label: false, html5: true %>
                    </div>
                  <% end %>

                  <div class="form-group u-no__bordered">
                    <label class="form-control-label">Ответственный</label>
                    <%= f.association :user, label_method: :email, class: 'form-control form-control-sm u-no__focus u-no__border-color u-no__image', label: false, include_blank: false %>
                  </div>

                  <div class="form-group u-no__bordered">
                    <label class="form-control-label">Контрагент</label>
                    <%= f.association :contractor, label_method: :title, class: 'form-control form-control-sm u-no__focus u-no__border-color u-no__image', label: false, include_blank: false %>
                  </div>

                  <div class="form-group u-no__bordered">
                    <label class="form-control-label">Проект</label>
                    <%= f.association :project, label_method: :title, class: 'form-control form-control-sm u-no__focus u-no__border-color u-no__image', label: false, include_blank: false %>
                  </div>

                </div>
              </div>
            </div>

            <div class="col-md-9 pl-0">
              <div class="bg-white">
                <div class="card-body">

                  <%= f.input :invoice_number, label: false do %>
                    <div class="input-group input-group-sm u-form u-form--sm u-form--modern">
                      <%= f.input_field :invoice_number, hint: false, class: 'form-control u-form__input u-no__focus u-no__border-color u-no__image' %>
                    </div>
                  <% end %>

                  <%= f.input :invoice_discription, label: 'Назначение' do %>
                    <div class="input-group input-group-sm u-form u-form--sm u-form--modern u-summernote-editor">
                      <%= f.text_area :invoice_discription, class: 'form-control u-form__input js-summernote-editor' %>
                    </div>
                  <% end %>

                </div>
              </div>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</main>