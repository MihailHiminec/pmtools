<main id="content" role="main">
  <div class="u-bg-light-blue-50">
    <div class="container-fluid u-space-3">
      <div class="col-md-8 offset-2">
        <h4 class="mt-3 ml-3">Задачи</h4>
        <div class="card">
          <div class="card-body">
            <table class="table table-borderless">
              <thead>
              <tr>
                <th>Название</th>
                <th>Описание</th>
                <th>Действия</th>
              </tr>
              </thead>
              <tbody>
              <% @payments.each do |payment| %>
                <tr>
                  <td><%= payment.invoice_number %></td>
                  <td><%= payment.invoice_discription %></td>
                  <td>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>