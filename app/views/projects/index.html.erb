<div class="col-md-8 offset-2">
  <h4 class="mt-3 ml-3">Проекты</h4>
  <div class="card">
    <div class="card-body">

      <%= form_with(model: @projects.new) do |f| %>
        <div class="input-group mb-3">
          <%= f.text_field  :title, class: 'form-control' %>
          <div class="input-group-append">
            <%= button_to "Добавить проект", @project, remote: true, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      <% end %>


      <table class="table table-borderless">
        <thead>
        <tr>
          <th>Имя</th>
          <th>Владелец</th>
          <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= link_to project.title, project %></td>
            <td><%= project.user.name %></td>
            <td>
              <%# if project.user = current_user %>
              <%= link_to 'Destroy', project, method: :delete,
                          data: { confirm: "You sure?" }%>
              <%# end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
