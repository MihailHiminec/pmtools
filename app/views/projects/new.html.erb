<div class="col-md-4 offset-md-4 card">
  <div class="card-body">
    <h2>Создать проект</h2>
    <%= simple_form_for @project do |f| %>
      <%= f.input :title do %>
        <div class="input-group">
          <%= f.input_field :title, class: 'form-control' %>
        </div>
      <% end %>

      <%= f.button :submit, class: 'btn-primary btn-sm' %>
    <% end %>
  </div>
</div>