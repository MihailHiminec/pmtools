<div class="col-md-8 offset-2">
  <h4 class="mt-3 ml-3">Авторизованые пользователи</h4>
  <div class="card">
    <div class="card-body">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th>Имя</th>
            <th>Email</th>
            <th>Статус</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user_status(user) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <h4>Инвайт</h4>

      <%= simple_form_for(User.new, url: user_invitation_path,
                          html: { class: 'form-inline' }) do |f| %>
        <%= f.input :email, placeholder: 'Email', label: false %>
        <%= f.button :submit, 'Выдать инвайт', class: 'btn-primary' %>
      <% end %>
    </div>
  </div>
</div>